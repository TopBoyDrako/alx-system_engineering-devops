#!/usr/bin/env bash
# Get the PID of the current script
script_pid=$$

# Find processes with "bash" in their name and filter out the grep command itself
while read -r line; do
    pid=$(echo "$line" | awk '{print $1}')
    process_name=$(echo "$line" | awk '{$1=""; print $0}')
    echo "$pid $process_name"
done < <(grep -E "bash" /proc/*/cmdline 2>/dev/null | grep -v "grep\|3-show_your_bash_pid_made_easy")

# Display the PID of the script
echo "Script PID: $script_pid"
